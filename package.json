{
  "dependencies": {
    "bulma": "^0.7.2",
    "lodash": "^4.17.11",
    "@types/lodash": "^4.14.118",
    "snabbdom": "^0.7.2"
  },
  "devDependencies": {
    "browserify": "^16.2.3",
    "clean-css-cli": "^4.2.1",
    "tsify": "^4.0.1",
    "typescript": "^3.2.2",
    "svgo": "^1.1.1"
  },
  "scripts": {
    "watch": "nodemon --watch frontend -e css,js,svg,ts --exec \"npm run build\"",
    "watch-js": "nodemon --watch frontend -e css,js,svg,ts --exec \"npm run build-js\"",
    "build": "npm run build-js && npm run build-css && npm run build-img",
    "build-img": "svgo -f frontend/img -o service/public",
    "build-css": "cleancss node_modules/bulma/css/bulma.min.css frontend/css/*.css -o service/public/robo-race.css",
    "build-js": "browserify -e -p [ tsify --target es2017 ] frontend/src/index.ts  > service/public/robo-race.js"
  }
}
