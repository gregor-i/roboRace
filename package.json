{
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.14.0",
    "bulma": "^0.7.2",
    "npm-run-all": "^4.1.5",
    "snabbdom": "^0.7.2"
  },
  "devDependencies": {
    "browserify": "^16.2.3",
    "sass": "^1.26.10",
    "svgo": "^1.1.1"
  },
  "scripts": {
    "watch": "nodemon --watch frontend -e css,svg --exec \"npm run build\"",
    "build": "npm run make-dirs && run-p build-*",
    "make-dirs": "mkdir -p service/public",
    "build-img": "svgo -f frontend/src/main/img -o service/public",
    "build-fonts": "cp -r node_modules/@fortawesome/fontawesome-free/webfonts/fa-solid* service/public/.",
    "build-css": "sass frontend/src/main/css/roborace.sass service/public/robo-race.css --no-source-map --style compressed",
    "build-static": "cp frontend/src/main/static/* service/public/."
  }
}
